{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "outDir": "dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": false,
        "target": "ES2022"
    },
    "include": [
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "client",
        "node_modules",
        "**/*.test.ts"
    ]
}